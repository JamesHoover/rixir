= form_for @specimen do |f|
  - if @specimen.errors.any?
    #error_explanation
      %h2= "#{pluralize(@specimen.errors.count, "error")} prohibited this specimen from being saved:"
      %ul
        - @specimen.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :parent
    = f.text_field :parent
  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :label
    = f.text_field :label
  .actions
    = f.submit 'Save'
