= form_for @speciman do |f|
  - if @speciman.errors.any?
    #error_explanation
      %h2= "#{pluralize(@speciman.errors.count, "error")} prohibited this speciman from being saved:"
      %ul
        - @speciman.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :id
    = f.text_field :id
  .field
    = f.label :parent
    = f.text_field :parent
  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :label
    = f.text_field :label
  .actions
    = f.submit 'Save'
